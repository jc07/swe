<v-dialog v-model="addEmployeeModal" persistent fullscreen=true>
    <v-card>
        <v-card-row class="black darken-1">
            <v-card-title class="white--text"> New Employee Details</v-card-title>
        </v-card-row>
        <v-card-row>
            <v-card-text>
              <v-container grid-list-md>
                <v-layout wrap>
                <v-alert error v-model="add_error">
                    All fields are required.
                </v-alert>
                <v-flex xs12 sm6 md4>
                  <v-text-field v-model="employee.name" label="Full Name"></v-text-field>
                </v-flex>
                <v-flex xs12 sm6 md4>
                  <v-text-field v-model="employee.email" label="Email Address"></v-text-field>
                </v-flex>
                <v-flex xs12 sm6 md4>
                  <v-text-field v-model="employee.contact" label="Contact Number"></v-text-field>
                </v-flex>
                <v-flex xs12 sm6 md4>
                  <v-text-field v-model="employee.fnm" label="Father or Mother Name"></v-text-field>
                </v-flex>
                <v-flex xs12 sm6 md4>
                  <v-text-field v-model="employee.Spouse" label="Spouse Name"></v-text-field>
                </v-flex>
                <v-flex xs12 sm6 md4>
                  <v-text-field v-model="employee.gender" label="Gender"></v-text-field>
                </v-flex>
                <v-flex xs12 sm6 md4>
                  <v-text-field v-model="employee.nation" label="Nationality"></v-text-field>
                </v-flex>
                <v-flex xs12 sm6 md4>
                  <v-text-field v-model="employee.address" label="Address"></v-text-field>
                </v-flex>
              </v-layout>
            </v-container>
            </v-card-text>
        </v-card-row>
        <v-card-row actions>
            <v-btn class="red--text darken-1" flat="flat" @click.native="closeAddEmployeeModal">Close</v-btn>
            <v-btn class="green--text darken-1" flat="flat" @click.native="addEmployee">Submit</v-btn>
        </v-card-row>
    </v-card>
</v-dialog>

